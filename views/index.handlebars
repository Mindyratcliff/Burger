<h1>Eat-Da-Burger!</h1>

<img src="public/assets/img/burgerbystella.png" id ="burger" alt="Image of Cartoon Burger"/> 

<h3>List the burgers you want to eat!</h3>


<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Task: {{this.burger_name}}</p>
  	</li>
  {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="addburger"></textarea>

	<button type="submit">Add Burger</button>
</form>

<form action="/" method="UPDATE">
	<textarea type="text" name="eatburger"></textarea>

	<button type="submit">Eat Burger</button>
</form>

<form action="/" method="DELETE">
	<textarea type="text" name="deleteburger"></textarea>

	<button type="submit">Delete</button>
</form>

